<!-- all user's friend -->
<h2 class="sub-header">Following</h2>
<div class="table-responsive" id="user-friends">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>User</th>
				<th>Online</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% @current_user.friendships.each do |friendship| %>
				<tr>
					<td><%= friendship.friend.username %></td>
					<td><%= friendship.friend.is_online %></td>
					<td><%= link_to "Unfollow", friendship, :method => :delete %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<!-- /all user's friend -->